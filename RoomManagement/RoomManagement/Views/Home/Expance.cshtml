@using RoomManagement.ViewModels;
@{
	ViewData["Title"] = "Expance";
}


@model IndexViewModel

<div class="row">
	<div class="col-md-12 offset-md-1 col-lg-8">
		<div class="row">
			<div class="col-8">
				<h1>Room Management Expance</h1>
			</div>
			<div class="col-4">
				<a asp-action="AddOrEditExpance" class="btn btn-sm btn-success">
					<i class="fa-solid fa-plus"></i> New
				</a>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th>
							Date
						</th>
						<th>
							Item
						</th>
						<th>
							Price
						</th>
						<th>
							Action
						</th>
					</tr>

				</thead>
				<tbody>
					@foreach (Expance item in @Model.Expance)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Date)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Item)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Price)
							</td>
							<td>
								<form asp-action="DeleteExpance" asp-route-id="@item.Id">
									<div class="btn-group btn-group-sm">
										<a asp-action="AddOrEditExpance" asp-route-id="@item.Id" class="btn btn-warning">
											<i class="fa-solid fa-pen-to-square"></i>
										</a>
										<button type="submit" class="btn btn-danger"
											onclick="return confirm('Are you sure to delete this record?')">
											<i class="far fa-trash-alt"></i>
										</button>
									</div>
								</form>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="col-md-3 col-3">
		<table class=" table table-bordered">
			<thead>
				<tr>
					<th>Total Food Amt</th>
					<th>Total Amt Spent</th>
					<th>Remaing Amount</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>@Model.TotalFoodAmount</td>
					<td style="color:red">@Model.totalAmtspend</td>
					<td style="color:green">@Model.RemaingAmt</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>