@model RoomManagement.Models.FoodDetail
@{
    ViewData["Title"] = "Add/Edit Expance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Expance</h1>
        <form asp-action="AddOrEditFoodDetails" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MemberId" />
            <div class="form-group">
                <label  class="control-label"></label>
                <input  type="text" readonly class="form-control" value="@ViewData["name"]"/>
            </div>
            <div class="form-group">
                <label asp-for="AmountToGive" class="control-label"></label>
                <input asp-for="AmountToGive" readonly type="text"  class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AmountRecived" class="control-label"></label>
                <input asp-for="AmountRecived" class="form-control" />
                <span asp-validation-for="AmountRecived" class="text-danger"></span>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <a asp-action="FoodDetails" class="btn btn-secondary  w-100">View All</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
